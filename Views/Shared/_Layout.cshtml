<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Veterinaria</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    
    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- FullCalendar CSS -->
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css' rel='stylesheet' />
    
    <style>
        .fc-event {
            cursor: pointer;
        }
        .fc-event-title {
            font-weight: bold;
        }
        .fc-event.urgente {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        .fc-event.normal {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
    </style>
    
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    @{
        var userEmail = Context.Session.GetString("UserEmail");
        var userName = Context.Session.GetString("UsuarioNombre");
    }

    <!-- Navbar -->
    <header>
        <partial name="_MenuPartial" />
    </header>

    <!-- Contenido Principal -->
    <main class="container my-4 flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-primary text-white py-3 mt-auto">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <span>© @DateTime.Now.Year Veterinaria - Todos los derechos reservados</span>
                <a href="#" class="text-white text-decoration-none">AllSoftware.cl</a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- FullCalendar JS -->
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js'></script>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/locales-all.min.js'></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>