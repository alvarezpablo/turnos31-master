@model Turnos31.Models.Consulta

@{
    ViewData["Title"] = "Editar Consulta";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4">Editar Consulta Veterinaria</h5>

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdConsulta" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="IdAgenda" class="control-label">Turno</label>
                                    <select asp-for="IdAgenda" class="form-select" asp-items="ViewBag.IdAgenda">
                                        <option value="">Seleccione un turno</option>
                                    </select>
                                    <span asp-validation-for="IdAgenda" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FechaHora" class="control-label">Fecha y Hora</label>
                                    <input asp-for="FechaHora" class="form-control" />
                                    <span asp-validation-for="FechaHora" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Motivo" class="control-label">Motivo de la Consulta</label>
                                    <textarea asp-for="Motivo" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Motivo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Peso" class="control-label">Peso (kg)</label>
                                    <input asp-for="Peso" class="form-control" type="number" step="0.1" />
                                    <span asp-validation-for="Peso" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Temperatura" class="control-label">Temperatura (°C)</label>
                                    <input asp-for="Temperatura" class="form-control" type="number" step="0.1" />
                                    <span asp-validation-for="Temperatura" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="FrecuenciaCardiaca" class="control-label">Frecuencia Cardíaca</label>
                                    <input asp-for="FrecuenciaCardiaca" class="form-control" type="number" />
                                    <span asp-validation-for="FrecuenciaCardiaca" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="FrecuenciaRespiratoria" class="control-label">Frecuencia Respiratoria</label>
                                    <input asp-for="FrecuenciaRespiratoria" class="form-control" type="number" />
                                    <span asp-validation-for="FrecuenciaRespiratoria" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Diagnostico" class="control-label">Diagnóstico</label>
                                    <textarea asp-for="Diagnostico" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Diagnostico" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Tratamiento" class="control-label">Tratamiento</label>
                                    <textarea asp-for="Tratamiento" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Tratamiento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Observaciones" class="control-label">Observaciones</label>
                                    <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 