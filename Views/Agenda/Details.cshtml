@model Turnos31.Models.Agenda

@{
    ViewData["Title"] = "Detalles de la Cita";
}

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-4">Detalles de la Cita</h5>
                <dl class="row">
                    <dt class="col-sm-3">Mascota</dt>
                    <dd class="col-sm-9">@Model.Mascota?.Nombre</dd>
                    <dt class="col-sm-3">Veterinario</dt>
                    <dd class="col-sm-9">@Model.Veterinario?.Nombre @Model.Veterinario?.Apellido</dd>
                    <dt class="col-sm-3">Fecha y Hora de Inicio</dt>
                    <dd class="col-sm-9">@Model.FechaHoraInicio.ToString("g")</dd>
                    <dt class="col-sm-3">Fecha y Hora de Fin</dt>
                    <dd class="col-sm-9">@Model.FechaHoraFin.ToString("g")</dd>
                    <dt class="col-sm-3">Tipo de Consulta</dt>
                    <dd class="col-sm-9">@Model.TipoConsulta</dd>
                    <dt class="col-sm-3">Motivo de la Visita</dt>
                    <dd class="col-sm-9">@Model.MotivoVisita</dd>
                    <dt class="col-sm-3">Descripción</dt>
                    <dd class="col-sm-9">@Model.Descripcion</dd>
                    <dt class="col-sm-3">Observaciones</dt>
                    <dd class="col-sm-9">@Model.Observaciones</dd>
                    <dt class="col-sm-3">Estado</dt>
                    <dd class="col-sm-9">@Model.Estado</dd>
                    <dt class="col-sm-3">Es Urgente</dt>
                    <dd class="col-sm-9">@(Model.EsUrgente ? "Sí" : "No")</dd>
                </dl>
                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.IdAgenda" class="btn btn-primary">
                        <i class="bi bi-pencil-fill me-1"></i>Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 