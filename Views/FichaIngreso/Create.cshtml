@model Turnos31.ViewModels.FichaIngresoViewModel

@{
    ViewData["Title"] = "Nueva Ficha de Ingreso";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="IdDueno" class="control-label"></label>
        <select asp-for="IdDueno" class="form-control" asp-items="Model.Duenos"></select>
        <span asp-validation-for="IdDueno" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdMascota" class="control-label"></label>
        <select asp-for="IdMascota" class="form-control" asp-items="Model.Mascotas"></select>
        <span asp-validation-for="IdMascota" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdNivelUrgencia" class="control-label"></label>
        <select asp-for="IdNivelUrgencia" class="form-control" asp-items="Model.NivelesUrgencia"></select>
        <span asp-validation-for="IdNivelUrgencia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdMotivoVisita" class="control-label"></label>
        <select asp-for="IdMotivoVisita" class="form-control" asp-items="Model.MotivosVisita"></select>
        <span asp-validation-for="IdMotivoVisita" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdTipoServicio" class="control-label"></label>
        <select asp-for="IdTipoServicio" class="form-control" asp-items="Model.TiposServicio"></select>
        <span asp-validation-for="IdTipoServicio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Observaciones" class="control-label">Observaciones</label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
        <span asp-validation-for="Observaciones" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 