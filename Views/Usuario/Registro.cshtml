@model Turnos31.Models.Usuario

@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="row">
    <div class="col s12 m8 offset-m2">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Registro de Usuario</span>
                <form asp-action="Registro" method="post">
                    <div asp-validation-summary="ModelOnly" class="red-text"></div>

                    <div class="row">
                        <div class="input-field col s12 m6">
                            <i class="material-icons prefix">person</i>
                            <input asp-for="Nombre" class="validate" required />
                            <label asp-for="Nombre">Nombre</label>
                            <span asp-validation-for="Nombre" class="red-text"></span>
                        </div>

                        <div class="input-field col s12 m6">
                            <i class="material-icons prefix">person</i>
                            <input asp-for="Apellido" class="validate" required />
                            <label asp-for="Apellido">Apellido</label>
                            <span asp-validation-for="Apellido" class="red-text"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">email</i>
                            <input asp-for="Email" type="email" class="validate" required />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="red-text"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">lock</i>
                            <input asp-for="Password" type="password" class="validate" required />
                            <label asp-for="Password">Contraseña</label>
                            <span asp-validation-for="Password" class="red-text"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12 center-align">
                            <button type="submit" class="btn waves-effect waves-light">
                                Registrarse
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12 center-align">
                            <p>¿Ya tienes una cuenta? <a asp-controller="Account" asp-action="Login">Iniciar Sesión</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('select').formSelect();
        });
    </script>
} 