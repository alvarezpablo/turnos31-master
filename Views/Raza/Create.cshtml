@model Turnos31.Models.Raza

@{
    ViewData["Title"] = "Nueva Raza";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Inicio</a></li>
        <li class="breadcrumb-item"><a href="/Raza" class="text-decoration-none">Razas</a></li>
        <li class="breadcrumb-item active" aria-current="page">Nueva Raza</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white">
                <h4 class="card-title mb-0">
                    <i class="bi bi-plus-circle me-2"></i>
                    Nueva Raza
                </h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                    <input asp-for="Activo" type="hidden" value="true" />

                    <div class="row g-3">
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Nombre" class="form-control" placeholder="Nombre de la raza" required />
                                <label asp-for="Nombre" class="form-label">
                                    <i class="bi bi-tag me-1"></i>Nombre de la Raza
                                </label>
                                <span asp-validation-for="Nombre" class="invalid-feedback"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <select asp-for="IdEspecie" asp-items="ViewBag.IdEspecie" class="form-select" required>
                                    <option value="">Seleccione una especie</option>
                                </select>
                                <label asp-for="IdEspecie" class="form-label">
                                    <i class="bi bi-collection me-1"></i>Especie
                                </label>
                                <span asp-validation-for="IdEspecie" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a class="btn btn-outline-secondary btn-lg me-md-2" asp-action="Index">
                            <i class="bi bi-arrow-left me-1"></i>
                            Cancelar
                        </a>
                        <button class="btn btn-primary btn-lg" type="submit">
                            <i class="bi bi-check-circle me-1"></i>
                            Guardar Raza
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}