@model Turnos31.Models.Raza

@{
    ViewData["Title"] = "Editar Raza";
}

<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Editar Raza</span>
                <form asp-action="Edit">
                    <input type="hidden" asp-for="IdRaza" />
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="red-text"></div>
                        <div class="input-field col s12">
                            <i class="material-icons prefix">pets</i>
                            <input asp-for="Nombre" class="validate" />
                            <label asp-for="Nombre"></label>
                            <span asp-validation-for="Nombre" class="red-text"></span>
                        </div>
                        <div class="input-field col s12">
                            <i class="material-icons prefix">category</i>
                            <select asp-for="IdEspecie" asp-items="ViewBag.IdEspecie" class="validate">
                                <option value="" disabled>Seleccione una especie</option>
                            </select>
                            <label>Especie</label>
                            <span asp-validation-for="IdEspecie" class="red-text"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <button class="btn waves-effect waves-light blue" type="submit">
                                <i class="material-icons left">save</i>
                                Guardar Cambios
                            </button>
                            <a class="waves-effect waves-light btn grey" asp-action="Index">
                                <i class="material-icons left">arrow_back</i>
                                Volver
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function(){
            $('select').formSelect();
        });
    </script>
} 