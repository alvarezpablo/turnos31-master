@model Turnos31.Models.Dueno

@{
    ViewData["Title"] = "Detalles del Dueño";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title mb-0">@Model.Nombre @Model.Apellido</h5>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.IdDueno" class="btn btn-primary">
                                <i class="bi bi-pencil me-1"></i> Editar
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Volver
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Información Personal</h6>
                            <dl class="row">
                                <dt class="col-sm-4"><i class="bi bi-person-badge me-2"></i>RUT</dt>
                                <dd class="col-sm-8">@Model.Rut</dd>

                                <dt class="col-sm-4"><i class="bi bi-telephone me-2"></i>Teléfono</dt>
                                <dd class="col-sm-8">@Model.Telefono</dd>

                                <dt class="col-sm-4"><i class="bi bi-envelope me-2"></i>Email</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4"><i class="bi bi-geo-alt me-2"></i>Dirección</dt>
                                <dd class="col-sm-8">@Model.Direccion</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <h6 class="text-muted mb-3">Mascotas</h6>
                            @if (Model.Mascotas.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Especie</th>
                                                <th>Raza</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var mascota in Model.Mascotas)
                                            {
                                                <tr>
                                                    <td>@mascota.Nombre</td>
                                                    <td>@mascota.Raza?.Especie?.Nombre</td>
                                                    <td>@mascota.Raza?.Nombre</td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <a class="btn btn-sm btn-outline-primary rounded-pill" asp-controller="Mascota" asp-action="Edit" asp-route-id="@mascota.IdMascota" title="Editar">
                                                                <i class="bi bi-pencil-fill"></i>
                                                            </a>
                                                            <a class="btn btn-sm btn-outline-info rounded-pill" asp-controller="Mascota" asp-action="Details" asp-route-id="@mascota.IdMascota" title="Ver detalles">
                                                                <i class="bi bi-eye-fill"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    No hay mascotas registradas para este dueño.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 