@model IEnumerable<Turnos31.Models.Mascota>

@{
    ViewData["Title"] = "Inicio";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container">
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-paw fs-1 text-primary mb-3"></i>
                    <h3 class="card-title">Mascotas</h3>
                    <p class="card-text">Administra el registro de mascotas y sus dueños</p>
                    <a href="/Mascota/Create" class="btn btn-primary">Gestionar Mascotas</a>
                </div>
            </div>
        </div>

         
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-4 text-center">
                            <div class="display-4 text-primary">150+</div>
                            <div class="text-muted">Pacientes Atendidos</div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="display-4 text-primary">10+</div>
                            <div class="text-muted">Médicos Especialistas</div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="display-4 text-primary">24/7</div>
                            <div class="text-muted">Atención Disponible</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

