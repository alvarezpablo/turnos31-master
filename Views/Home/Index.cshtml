@section Scripts {
    <script>
        $(document).ready(function () {
            $('select').formSelect();
        });
    </script>
}

<style>
    .card .card-image {
        text-align: center;
        transition: all 0.3s ease;
    }
    .card:hover .card-image {
        transform: scale(1.05);
    }
    .card .material-icons.large {
        font-size: 6rem;
        line-height: 6rem;
    }
    .divider {
        margin: 20px 0;
        background-color: #A8C7B5;
    }
    .card-action {
        padding-top: 16px;
    }
    .btn-small {
        margin: 5px;
    }
    .section {
        padding-top: 1rem;
        padding-bottom: 1rem;
    }
    .card {
        border-radius: 8px;
    }
    .card .card-image {
        border-radius: 8px 8px 0 0;
    }
