@model Turnos31.Models.Mascota

@{
    ViewData["Title"] = "Eliminar Mascota";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-paw fs-4 me-2"></i>
                        <h5 class="card-title mb-0">Eliminar Mascota</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <h6 class="alert-heading mb-1">¿Está seguro que desea eliminar esta mascota?</h6>
                        <p class="mb-0">Esta acción no se puede deshacer y eliminará todos los registros asociados.</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h4 class="text-primary mb-3">@Model.Nombre</h4>
                            <p class="mb-1">
                                <i class="bi bi-tag me-2"></i>
                                <strong>Especie:</strong> @Model.Especie?.Nombre
                            </p>
                            <p class="mb-1">
                                <i class="bi bi-tag-fill me-2"></i>
                                <strong>Raza:</strong> @Model.Raza?.Nombre
                            </p>
                            <p class="mb-1">
                                <i class="bi bi-gender-ambiguous me-2"></i>
                                <strong>Sexo:</strong> @(Model.Sexo == "M" ? "Macho" : "Hembra")
                            </p>
                            <p class="mb-1">
                                <i class="bi bi-calendar me-2"></i>
                                <strong>Edad:</strong> @(Model.Edad > 0 ? $"{Model.Edad} años" : "N/A")
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3">
                                <i class="bi bi-person me-2"></i>
                                Información del Dueño
                            </h5>
                            <p class="mb-1">
                                <strong>Nombre:</strong> @Model.Dueno?.Nombre @Model.Dueno?.Apellido
                            </p>
                            <p class="mb-1">
                                <i class="bi bi-telephone me-2"></i>
                                <strong>Teléfono:</strong> @Model.Dueno?.Telefono
                            </p>
                            <p class="mb-1">
                                <i class="bi bi-envelope me-2"></i>
                                <strong>Email:</strong> @Model.Dueno?.Email
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Observaciones))
                    {
                        <div class="alert alert-info">
                            <h6 class="alert-heading mb-2">
                                <i class="bi bi-info-circle me-2"></i>
                                Observaciones
                            </h6>
                            <p class="mb-0">@Model.Observaciones</p>
                        </div>
                    }

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="IdMascota" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i>Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 