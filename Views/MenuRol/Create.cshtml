@model Turnos31.Models.MenuRol

@{
    ViewData["Title"] = "Nueva Asignación";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Nueva Asignación de Rol a Menú</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="MenuId" class="form-label">Menú</label>
                            <select asp-for="MenuId" class="form-select" asp-items="ViewBag.MenuId">
                                <option value="">-- Seleccione un menú --</option>
                            </select>
                            <span asp-validation-for="MenuId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RolId" class="form-label">Rol</label>
                            <select asp-for="RolId" class="form-select" asp-items="ViewBag.RolId">
                                <option value="">-- Seleccione un rol --</option>
                            </select>
                            <span asp-validation-for="RolId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i>Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 