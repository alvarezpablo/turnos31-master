@model Turnos31.Models.Veterinario

@{
    ViewData["Title"] = "Detalles del Médico";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-badge fs-4 me-2"></i>
                        <h5 class="card-title mb-0">Detalles del Médico</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-12">
                            <h4 class="text-primary mb-3">
                                @Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)
                            </h4>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-geo-alt text-primary fs-5 me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Dirección</small>
                                    <span>@Html.DisplayFor(model => model.Direccion)</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-telephone text-primary fs-5 me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Teléfono</small>
                                    <a href="tel:@Model.Telefono" class="text-decoration-none">
                                        @Html.DisplayFor(model => model.Telefono)
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-envelope text-primary fs-5 me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Email</small>
                                    <a href="mailto:@Model.Email" class="text-decoration-none">
                                        @Html.DisplayFor(model => model.Email)
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-clock text-primary fs-5 me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Horario de Atención</small>
                                    <span>
                                        @Model.HorarioAtencionDesde.ToString("HH:mm") - @Model.HorarioAtencionHasta.ToString("HH:mm")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.Especialidades != null && Model.Especialidades.Any())
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h6 class="border-bottom pb-2 mb-3">
                                    <i class="bi bi-tags me-2"></i>Especialidades
                                </h6>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var especialidad in Model.Especialidades)
                                    {
                                        <span class="badge bg-info">
                                            <i class="bi bi-check-circle me-1"></i>
                                            @especialidad.Especialidad?.Descripcion
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Volver
                        </a>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@Model.IdVeterinario" class="btn btn-primary">
                                <i class="bi bi-pencil me-1"></i>Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.IdVeterinario" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>