@model IEnumerable<Turnos31.Models.Veterinario>

@{
    ViewData["Title"] = "Médicos";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-badge fs-4 me-2"></i>
                        <h5 class="card-title mb-0">Médicos</h5>
                    </div>
                    <a asp-action="Create" class="btn btn-light">
                        <i class="bi bi-plus-circle me-1"></i>Nuevo Médico
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                                    <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                                    <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                                    <th>Horario de Atención</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                                        <td>
                                            <a href="mailto:@item.Email" class="text-decoration-none">
                                                <i class="bi bi-envelope me-1"></i>@item.Email
                                            </a>
                                        </td>
                                        <td>
                                            <a href="tel:@item.Telefono" class="text-decoration-none">
                                                <i class="bi bi-telephone me-1"></i>@item.Telefono
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">
                                                <i class="bi bi-clock me-1"></i>
                                                @item.HorarioAtencionDesde.ToString("HH:mm") - @item.HorarioAtencionHasta.ToString("HH:mm")
                                            </span>
                                        </td>
                                        <td>
                                            <div class="d-flex justify-content-center gap-2">
                                                <a asp-action="Edit" asp-route-id="@item.IdVeterinario" 
                                                   class="btn btn-sm btn-outline-primary" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.IdVeterinario" 
                                                   class="btn btn-sm btn-outline-info" title="Detalles">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.IdVeterinario" 
                                                   class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  
    
