@model Turnos31.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="row">
    <div class="col s12 m6 offset-m3">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Iniciar Sesión</span>
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="red-text"></div>

                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">email</i>
                            <input asp-for="Email" type="email" class="validate" required />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="red-text"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">lock</i>
                            <input asp-for="Password" type="password" class="validate" required />
                            <label asp-for="Password">Contraseña</label>
                            <span asp-validation-for="Password" class="red-text"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12 center-align">
                            <label>
                                <input type="checkbox" asp-for="RememberMe" class="filled-in" />
                                <span>Recordarme</span>
                            </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12 center-align">
                            <button type="submit" class="btn waves-effect waves-light">
                                Iniciar Sesión
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12 center-align">
                            <p>¿No tienes una cuenta? <a asp-controller="Usuario" asp-action="Registro">Regístrate</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 