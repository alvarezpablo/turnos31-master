@model Turnos31.Models.Menu

@{
    ViewData["Title"] = "Eliminar Menú";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Eliminar Menú</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        ¿Está seguro que desea eliminar este menú?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Url)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Url)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Icono)</dt>
                        <dd class="col-sm-9"><i class="@Model.Icono"></i> @Html.DisplayFor(model => model.Icono)</dd>

                        <dt class="col-sm-3">Menú Padre</dt>
                        <dd class="col-sm-9">@(Model.MenuPadre?.Nombre ?? "-")</dd>

                        <dt class="col-sm-3">Roles</dt>
                        <dd class="col-sm-9">
                            @if (Model.MenuRoles != null && Model.MenuRoles.Any())
                            {
                                <ul class="list-unstyled">
                                    @foreach (var menuRol in Model.MenuRoles)
                                    {
                                        <li><i class="bi bi-person-badge me-1"></i>@menuRol.Rol?.NombreRol</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">No hay roles asignados</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete" class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Volver
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 